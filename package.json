{
  "name": "flush-requires-boilerplate-webpack-chunknames",
  "description": "A boilerplate showing how to achieve Universal Code-Splitting and Universal HMR with react-universal-component, webpack-flush-chunks and extract-css-chunks-webpack-plugin",
  "version": "1.0.0",
  "main": "server/index.js",
  "author": "James Gillmore <james@faceyspacey.com>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development node server/index.js",
    "start:prod": "npm run clean && cross-env NODE_ENV=production node server/index.js",
    "format": "prettier --single-quote --semi=false --write '{src,server,webpack}/**/*.js' && eslint --fix src server webpack",
    "clean": "rimraf build",
    "cm": "git-cz"
  },
  "dependencies": {
    "babel-plugin-transform-imports": "^1.4.1",
    "babel-preset-env": "^1.6.1",
    "colors": "^1.1.2",
    "date-fns": "^1.29.0",
    "express": "^4.16.2",
    "express-no-favicons": "^0.0.1",
    "history": "^4.7.2",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-render-to-string": "^3.7.0",
    "react-helmet": "^5.2.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-universal-component": "^2.6.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-flush-chunks": "^1.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-universal-import": "^1.3.3",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-watch": "^2.0.7",
    "commitizen": "^2.9.6",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.0",
    "extract-css-chunks-webpack-plugin": "^2.0.17",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "react-hot-loader": "3.1.3",
    "rimraf": "^2.6.2",
    "travis-github-status": "^1.6.3",
    "webpack": "^3.8.1",
    "webpack-hot-middleware": "^2.20.0",
    "webpack-hot-server-middleware": "^0.3.0",
    "write-file-webpack-plugin": "^4.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
