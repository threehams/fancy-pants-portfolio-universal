{
  "presets": [
    [
      "env",
      {
        "modules": false,
        "targets": {
          "browsers": [">0.5% in US"]
        }
      }
    ],
    "react",
    "stage-2"
  ],
  "plugins": [
    "universal-import",
    [
      "transform-imports",
      {
        "react-router": {
          "transform": "react-router/${member}",
          "preventFullImport": true
        },
        "react-router-dom": {
          "transform": "react-router-dom/${member}",
          "preventFullImport": true
        }
      }
    ]
  ],
  "env": {
    "development": {
      "plugins": ["react-hot-loader/babel"]
    }
  }
}
